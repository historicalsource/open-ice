#
.SUFFIXES : .out .asm .obj .h
#

#
# USED TO MAKE MASTER EQUATE FILE HH.INC
#
EQUS =	HHASM.H HHDISP.H HHMPROC.H HHSYS.H HHS.H HHEQU.H \
	HHM.H HHDIP.H HHAUDN.H HHNHL.H HHSND.H
MEQUS =	HHASM.H+HHDISP.H+HHMPROC.H+HHSYS.H+HHS.H+HHEQU.H+HHM.H+HHDIP.H+HHAUDN.H+HHNHL.H+HHSND.H

OBJS =	HH.OBJ HHAFUNC.OBJ HHC.OBJ HHD.OBJ HHRAM.OBJ HHPUCK.OBJ HHA.OBJ \
	HHPLAYER.OBJ HHCONTRL.OBJ HHCONTR2.OBJ HHGAME.OBJ HHSCORE.OBJ \
	HHHIGHER.OBJ HHATTRCT.OBJ HHSELECT.OBJ HHSTABLE.OBJ HHSTABL2.OBJ \
	HHSTABL3.OBJ HHSTABL4.OBJ HHSTABL5.OBJ HHSHOW.OBJ HHTIMER.OBJ HHNDRONE.OBJ \
	HHRT.OBJ HHCX.OBJ HHGDRONE.OBJ HHGSCR.OBJ HHGSCRF.OBJ HHRSCR.OBJ \
	HHSPEECH.OBJ HHSPECH2.OBJ HHPICK.OBJ HHGSCR2.OBJ HHGCTRL.OBJ HHSCR_CH.OBJ \
	HHSCR_FN.OBJ HHSCR_MS.OBJ HHSCR_SH.OBJ HHSCRSH2.OBJ HHSCR_SK.OBJ \
	HHSCR_CB.OBJ HHPICK2.OBJ HHTG.OBJ HHSTATS.OBJ HHVIDS.OBJ HHPUP.OBJ \
	HHFIX.OBJ HHCONTR3.OBJ HHSCRCHF.OBJ

DOBJS =	HHADJ.OBJ HHCMOS.OBJ HHCOIN.OBJ HHDTST.OBJ HHDUTL.OBJ \
	HHMENU.OBJ HHSYSFNT.OBJ HHWORD.OBJ hhpic.obj

SOBJS =	HHTABLES.OBJ HHMISC.OBJ HHPALL.OBJ HHPROC.OBJ HHSND.OBJ HHTEXT.OBJ \
	HHMATH.OBJ HHTV.OBJ HHFADE.OBJ HHUTIL.OBJ HHUART.OBJ \
	IMGPAL.OBJ IMGTBL.OBJ

.asm.obj:
        GSPA $* $*.OBJ $(TVPATH)$*.LST -H -L -v10
	CRNCHLST $(TVPATH)$*.LST

$(TVPATH)HH.OUT: HH.INC $(OBJS) $(TVPATH)HHSYSTEM.RLO $(TVPATH)HHDIAG.RLO
	GLNK HH10
	run

$(TVPATH)HHDIAG.RLO: $(DOBJS)
	GLNK HHDIAG10

$(TVPATH)HHSYSTEM.RLO: $(SOBJS)
	GLNK HHSYS10

HH.INC:	$(EQUS)
        @ ECHO *** UPDATING MERGED EQUATE FILE -- HH.INC ***
	copy $(MEQUS) HH.INC

img: LOD HH.INC $(OBJS) $(TVPATH)HHSYSTEM.RLO $(TVPATH)HHDIAG.RLO
	GLNK HH10

nl:  HH.INC $(OBJS) $(TVPATH)HHSYSTEM.RLO $(TVPATH)HHDIAG.RLO
	GLNK HH10

LOD:
	newload


$(OBJS):	$*.ASM
$(DOBJS):	$*.ASM
$(SOBJS):	$*.ASM
HHGAME.OBJ:	GOALS.TBL EDGE.TBL HHBOARDS.TBL HHGAME.TBL HHASM.H
HHPROC.OBJ:	HHMPROC.H
HHD.OBJ:	HHDISP.H HHSYS.H HHD.TBL
HHC.OBJ:	HHDISP.H HHSYS.H HHASM.H
HHTEXT.OBJ:	HHSTRING.H HHTEXT0.TBL HHTEXT1.TBL HHSYS.H
HHPALL.OBJ:	HHSYS.H
HHUTIL.OBJ:	HHSYS.H HHASM.H
HH.OBJ:		HHASM.H HHSYS.H HHDIP.H HHEQU.H	
HHCOIN.OBJ:	HHSYS.H
HHDTST.OBJ:	HHSYS.H HHDIP.H
HHDUTL.OBJ:	HHSYS.H HHDIP.H
HHCMOS.OBJ:	HHSYS.H
HHADJ.OBJ:	HHSYS.H HHDIP.H
HHMENU.OBJ:	HHSYS.H HHDIP.H
HHMISC.OBJ:	HHSYS.H
HHRAM.OBJ:	HHDISP.H 
HHSND.OBJ:	HHASM.H
HHATTRCT.OBJ:	HHATTRCT.TBL HHASM.H
HHSTABLE.OBJ:	HHSELECT.TBL SCREEN.TBL HHASM.H
HHSTABL2.OBJ:	HHSTABL2.TBL HHASM.H
HHSTABL3.OBJ:	HEADS.TBL HHASM.H
HHTIMER.OBJ:	CLOCK.TBL HHRPAL.H HHASM.H
HHGSCR.OBJ:	HHGSCR00.TBL HHGSCR01.TBL
HHGSCR2.OBJ:	HHGSCR20.TBL HHGSCR21.TBL
HHCONTRL.OBJ:	HHASM.H HHCONTRL.TBL
HHCONTR2.OBJ:	HHCONTR2.TBL HHASM.H
HHPUCK.OBJ:	HHASM.H HHPUCK.TBL
HHPSCRP1.OBJ:	HHASM.H
HHRSCR.OBJ:	HHRSCR.TBL
HHPICK.OBJ:	HHPICK.TBL HHASM.H
HHPICK2.OBJ:	HHPICK2.TBL HHASM.H
HHSCORE.OBJ:	HHASM.H GOALS.TBL
hhpic.asm:	hhdisp.h hhsys.h hhstring.h hhdip.h hhaudn.h
HHSCR_CH.OBJ:	HHSCR_CH.TBL
HHSCR_MS.OBJ:	HHSCR_MS.TBL HHASM.H
HHSCR_SH.OBJ:	HHSCR_SH.TBL
HHSCR_SK.OBJ:	HHSCR_SK.TBL
HHPLAYER.OBJ:	PLAYER.TBL
HHHIGHER.OBJ:	HHASM.H
HHSELECT.OBJ:	HHASM.H
HHTG.OBJ:	HHTG.TBL HHTG2.TBL HHASM.H
HHSTATS.OBJ:	HHSTATS.TBL
HHVIDS.OBJ:	NEWVIDS.TBL
HHPUP.OBJ:	HHPUP0.TBL

